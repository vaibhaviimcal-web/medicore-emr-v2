generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  firstName     String
  lastName      String
  role          UserRole
  phone         String?
  avatar        String?
  isActive      Boolean  @default(true)
  lastLogin     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  doctor        Doctor?
  nurse         Nurse?
  receptionist  Receptionist?
  admin         Admin?

  @@map("users")
}

enum UserRole {
  DOCTOR
  NURSE
  RECEPTIONIST
  ADMIN
  PATIENT
}

model Doctor {
  id                String   @id @default(uuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  licenseNumber     String   @unique
  specialty         String
  qualification     String
  experience        Int
  consultationFee   Float
  bio               String?
  
  appointments      Appointment[]
  prescriptions     Prescription[]
  consultations     Consultation[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("doctors")
}

model Patient {
  id                String   @id @default(uuid())
  firstName         String
  lastName          String
  email             String?  @unique
  phone             String   @unique
  dateOfBirth       DateTime
  gender            Gender
  bloodGroup        String?
  address           String?
  city              String?
  state             String?
  pincode           String?
  emergencyContact  String?
  
  medicalHistory    MedicalHistory?
  appointments      Appointment[]
  prescriptions     Prescription[]
  consultations     Consultation[]
  billings          Billing[]
  labReports        LabReport[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("patients")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model MedicalHistory {
  id                String   @id @default(uuid())
  patientId         String   @unique
  patient           Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  
  allergies         String[]
  chronicDiseases   String[]
  surgeries         String[]
  familyHistory     String?
  medications       String[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("medical_histories")
}

model Appointment {
  id                String   @id @default(uuid())
  patientId         String
  patient           Patient  @relation(fields: [patientId], references: [id])
  doctorId          String
  doctor            Doctor   @relation(fields: [doctorId], references: [id])
  
  appointmentDate   DateTime
  duration          Int      @default(30)
  type              AppointmentType
  status            AppointmentStatus @default(SCHEDULED)
  reason            String?
  notes             String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("appointments")
}

enum AppointmentType {
  IN_PERSON
  VIDEO_CALL
  PHONE_CALL
}

enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

model Prescription {
  id                String   @id @default(uuid())
  patientId         String
  patient           Patient  @relation(fields: [patientId], references: [id])
  doctorId          String
  doctor            Doctor   @relation(fields: [doctorId], references: [id])
  
  diagnosis         String
  symptoms          String[]
  medications       Medication[]
  instructions      String?
  followUpDate      DateTime?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("prescriptions")
}

model Medication {
  id                String   @id @default(uuid())
  prescriptionId    String
  prescription      Prescription @relation(fields: [prescriptionId], references: [id], onDelete: Cascade)
  
  name              String
  dosage            String
  frequency         String
  duration          String
  instructions      String?
  
  createdAt         DateTime @default(now())

  @@map("medications")
}

model Consultation {
  id                String   @id @default(uuid())
  patientId         String
  patient           Patient  @relation(fields: [patientId], references: [id])
  doctorId          String
  doctor            Doctor   @relation(fields: [doctorId], references: [id])
  
  type              ConsultationType
  status            ConsultationStatus @default(SCHEDULED)
  roomId            String?  @unique
  startTime         DateTime
  endTime           DateTime?
  duration          Int?
  notes             String?
  recording         String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("consultations")
}

enum ConsultationType {
  VIDEO
  AUDIO
  CHAT
}

enum ConsultationStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model Billing {
  id                String   @id @default(uuid())
  patientId         String
  patient           Patient  @relation(fields: [patientId], references: [id])
  
  invoiceNumber     String   @unique
  amount            Float
  tax               Float    @default(0)
  discount          Float    @default(0)
  totalAmount       Float
  status            BillingStatus @default(PENDING)
  paymentMethod     String?
  transactionId     String?
  items             BillingItem[]
  
  paidAt            DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("billings")
}

enum BillingStatus {
  PENDING
  PAID
  PARTIALLY_PAID
  CANCELLED
  REFUNDED
}

model BillingItem {
  id                String   @id @default(uuid())
  billingId         String
  billing           Billing  @relation(fields: [billingId], references: [id], onDelete: Cascade)
  
  description       String
  quantity          Int      @default(1)
  unitPrice         Float
  totalPrice        Float
  
  createdAt         DateTime @default(now())

  @@map("billing_items")
}

model LabReport {
  id                String   @id @default(uuid())
  patientId         String
  patient           Patient  @relation(fields: [patientId], references: [id])
  
  testName          String
  testType          String
  result            String
  normalRange       String?
  unit              String?
  status            LabReportStatus @default(PENDING)
  reportFile        String?
  notes             String?
  
  testedAt          DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("lab_reports")
}

enum LabReportStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model Nurse {
  id                String   @id @default(uuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  licenseNumber     String   @unique
  department        String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("nurses")
}

model Receptionist {
  id                String   @id @default(uuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  department        String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("receptionists")
}

model Admin {
  id                String   @id @default(uuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  permissions       String[]
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("admins")
}
